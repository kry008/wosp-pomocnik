<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/datatables/dataTables.min.css">
    <style>
        table tr:hover {
            background: #f8f9fa;
        }
        
        .clickable-row { cursor: pointer; }
        
        .edit-btn {
            background: #667eea;
            color: white;
            padding: 0.5rem 1rem;
            text-decoration: none;
            border-radius: 5px;
            font-size: 0.9rem;
            transition: background 0.2s ease;
        }
        
        .edit-btn:hover {
            background: #5568d3;
        }
        
        .no-data {
            text-align: center;
            padding: 2rem;
            color: #666;
            font-style: italic;
        }
        
        @media (max-width: 768px) {
            table {
                font-size: 0.9rem;
            }
            
            table th, table td {
                padding: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <div style="display: flex; align-items: center;">
            <img src="/logo.png" alt="Logo WOŚP" style="height: 50px; margin-right: 10px;">
            <h1 style="margin: 0;"><a href="/" style="text-decoration: none; color: inherit;"><%= title %></a></h1>
            <p style="margin: 0 0 0 10px;">Nierozliczeni wolontariusze</p>
        </div>
        <div class="user-info">
            <p><strong>Zalogowany:</strong> <%= user.imie %> <%= user.nazwisko %></p>
            <a href="/rozliczenia" class="back-btn">← Powrót</a>
        </div>
    </div>
    
    <div class="content">
        <h3>Wolontariusze (<%= wolontariusze.length %>)</h3>
        
        <div class="table-container">
            <% if (wolontariusze.length > 0) { %>
            <table id="unsettledTable">
                <thead>
                    <tr>
                        <th>Numer ID</th>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th>Dodaj</th>
                    </tr>
                </thead>
                <tbody>
                    <% wolontariusze.forEach(function(w) { %>
                    <tr class="clickable-row" onclick="goToRozliczenie(<%= w.id %>)">
                        <td><strong><%= w.numerID %></strong></td>
                        <td><%- w.zaznaczony == 1 ? '<u>' + w.imie + '</u>' : w.imie %></td>
                        <td><%- w.zaznaczony == 1 ? '<u>' + w.nazwisko + '</u>' : w.nazwisko %></td>
                        <td><a href="/rozliczenia/wolontariusz/<%= w.id %>" class="edit-btn" onclick="event.stopPropagation()">Dodaj</a></td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <% } else { %>
            <div class="no-data">
                Brak nierozliczonych wolontariuszy w bazie danych
            </div>
            <% } %>
        </div>
    </div>
    
    <div class="footer">
        <p><%= footer_text %></p>
    </div>
    
    <script>
        function goToRozliczenie(id) {
            window.location = `/rozliczenia/wolontariusz/${id}`
        }
    </script>
    <script src="/jquery-3.7.1.min.js"></script>
    <script src="/datatables/dataTables.min.js"></script>

    <script>
    document.addEventListener('DOMContentLoaded', function () {
        if (document.querySelector('#unsettledTable')) {
            let table = new DataTable('#unsettledTable', 
                {
                    "language": {
                        "url": "/datatables/pl.json"
                    },
                    "pageLength": 25,
                    "lengthMenu": [ [10, 25, 50, -1], [10, 25, 50, "Wszystkie"] ],
                    "order": [[ 0, "asc" ]]
                }
            );
        }
    });
    </script>

</body>
</html>
