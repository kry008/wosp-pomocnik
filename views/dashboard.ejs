        </div>
    </div>
            <% if (user.dostep == 2) { %>

        <!-- Modal z kodem QR dla zalogowanego u≈ºytkownika -->
        <div id="myQrModal" style="display:none;position:fixed;z-index:1000;left:0;top:0;width:100%;height:100%;background:rgba(0,0,0,0.5);">
            <div style="background:white;margin:5% auto;padding:1rem;border-radius:8px;width:90%;max-width:420px;text-align:center;position:relative;">
                <span style="position:absolute;right:12px;top:8px;cursor:pointer;font-size:20px;" onclick="closeMyQrModal()">‚úñ</span>
                <h3>M√≥j kod QR</h3>
                <div id="myQrcode" style="margin:12px auto;"></div>
                <pre id="myQrData" style="text-align:left;background:#f6f6f6;padding:8px;border-radius:4px;overflow:auto;max-height:160px;"></pre>
            </div>
        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
        <script>
            const APP_URL = '<%= URL_FOR_APP %>';
            function openMyQrModal(){
                const data = { url: APP_URL, user: '<%= user.login %>' };
                document.getElementById('myQrcode').innerHTML = '';
                new QRCode(document.getElementById('myQrcode'), {
                    text: JSON.stringify(data),
                    width: 220,
                    height: 220,
                    correctLevel: QRCode.CorrectLevel.H
                });
                document.getElementById('myQrData').textContent = JSON.stringify(data, null, 2);
                document.getElementById('myQrModal').style.display = 'block';
            }
            function closeMyQrModal(){
                document.getElementById('myQrModal').style.display = 'none';
            }
        </script>
        <% } %>
    
    <% if (user.dostep === 0) { %>
    <script>
        function invalidateAllTokens() {
            if (!confirm('Czy na pewno chcesz uniewa≈ºniƒá wszystkie tokeny API? To spowoduje wylogowanie wszystkich u≈ºytkownik√≥w z aplikacji mobilnych.')) {
                return;
            }
            
            fetch('/tokens/invalidate-all', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Uniewa≈ºniono ' + data.count + ' token√≥w');
                } else {
                    alert('B≈ÇƒÖd: ' + data.message);
                }
            })
            .catch(error => {
                alert('WystƒÖpi≈Ç b≈ÇƒÖd podczas uniewa≈ºniania token√≥w');
                console.error('Error:', error);
            });
        }
    </script>
    <% } %>
    
    <div class="footer">
