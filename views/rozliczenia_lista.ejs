<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/datatables/dataTables.min.css">
    <style>
        table tr:hover {
            background: #f8f9fa;
        }
        
        .edit-btn {
            background: #667eea;
            color: white;
            padding: 0.5rem 1rem;
            text-decoration: none;
            border-radius: 5px;
            font-size: 0.9rem;
            transition: background 0.2s ease;
            display: inline-block;
            margin-right: 0.5rem;
        }
        
        .edit-btn:hover {
            background: #5568d3;
        }
        
        .approve-btn {
            background: #28a745;
            color: white;
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 5px;
            font-size: 0.9rem;
            cursor: pointer;
            transition: background 0.2s ease;
        }
        
        .approve-btn:hover {
            background: #218838;
        }
        
        .no-data {
            text-align: center;
            padding: 2rem;
            color: #666;
            font-style: italic;
        }
        
        @media (max-width: 768px) {
            
            table {
                font-size: 0.9rem;
            }
            
            table th, table td {
                padding: 0.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <div style="display: flex; align-items: center;">
            <img src="/logo.png" alt="Logo WOŚP" style="height: 50px; margin-right: 10px;">
            <h1 style="margin: 0;"><a href="/" style="text-decoration: none; color: inherit;"><%= title %></a></h1>
            <p style="margin: 0 0 0 10px;">Lista rozliczeń</p>
        </div>
        <div class="user-info">
            <p><strong>Zalogowany:</strong> <%= user.imie %> <%= user.nazwisko %></p>
            <a href="/rozliczenia" class="back-btn">← Powrót</a>
        </div>
    </div>
    
    <div class="content">
        <h3>Rozliczenia (<%= rozliczenia.length %>)</h3>
        
        <div class="table-container">
            <% if (rozliczenia.length > 0) { %>
            <table id="settlementsTable">
                <thead>
                    <tr>
                        <th>Numer ID</th>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th>Suma kwoty</th>
                        <th>Kwota terminala</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    <% rozliczenia.forEach(function(r) { %>
                    <tr>
                        <td><%= r.numerID %></td>
                        <td><%= r.imie %></td>
                        <td><%= r.nazwisko %></td>
                        <td><%= parseFloat(r.sumaKwoty).toFixed(2) %> zł</td>
                        <td><%= parseFloat(r.kwotaZTerminala).toFixed(2) %> zł</td>
                        <td>
                            <% if (user.dostep == 0 || (user.dostep == 1 && r.zatwierdzil == 0)) { %>
                                <a href="/rozliczenia/edytuj/<%= r.rozliczenieID %>" class="edit-btn">Edytuj</a>
                            <% } %>
                            <% if (r.zatwierdzil == 0 && user.dostep <= 1) { %>
                                <button onclick="zatwierdz(<%= r.rozliczenieID %>)" class="approve-btn">Zatwierdź</button>
                            <% } %>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
            <% } else { %>
            <div class="no-data">
                Brak rozliczeń w bazie danych
            </div>
            <% } %>
        </div>
    </div>
    
    <div class="footer">
        <p><%= footer_text %></p>
    </div>
    
    <script src="/jquery-3.7.1.min.js"></script>
    <script src="/datatables/dataTables.min.js"></script>

    <script>
    document.addEventListener('DOMContentLoaded', function () {
        let table = new DataTable('#settlementsTable', 
            {
                "language": {
                    "url": "/datatables/pl.json"
                },
                "pageLength": 25,
                "lengthMenu": [ [10, 25, 50, -1], [10, 25, 50, "Wszystkie"] ],
                "order": [[ 0, "asc" ]]
            }
        );
    });

    function zatwierdz(id) {
        fetch('/rozliczenia/zatwierdz/' + id, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Błąd: ' + data.message);
            }
        })
        .catch(error => {
            alert('Wystąpił błąd podczas zatwierdzania');
            console.error('Error:', error);
        });
    }
    </script>

</body>
</html>