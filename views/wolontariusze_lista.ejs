    <script>
    document.addEventListener('DOMContentLoaded', function () {
        let table = new DataTable('#volunteersTable', 
            {
                "language": {
                    "url": "/datatables/pl.json"
                },
                "pageLength": 25,
                "lengthMenu": [ [10, 25, 50, -1], [10, 25, 50, "Wszystkie"] ],
                "order": [[ 0, "asc" ]]
            }
        );
    });

    function toggleZaznaczony(element, volunteerId, newValue) {
        fetch(`/wolontariusze/toggle/${volunteerId}`, {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ field: 'zaznaczony', value: newValue })
        })
        .then(r => {
            if (!r.ok) {
                throw new Error(`HTTP error! status: ${r.status}`);
            }
            return r.json();
        })
        .then(data => {
            if (data.success) {
                // Znajdź wiersz i zaktualizuj klasę zaznaczony
                console.log(`Successfully toggled zaznaczony for volunteer ID ${volunteerId} to value ${newValue}`);
                const row = element.closest('tr');
                if (newValue === 1) {
                    row.classList.add('zaznaczony');
                } else {
                    row.classList.remove('zaznaczony');
                }
                // Zaktualizuj onclick dla wszystkich klikanych komórek w tym wierszu
                const clickableCells = row.querySelectorAll('.clickable-cell');
                clickableCells.forEach(cell => {
                    cell.setAttribute('onclick', `toggleZaznaczony(this, ${volunteerId}, ${newValue === 1 ? 0 : 1})`);
                });
            } else {
                alert('Błąd: ' + data.message);
            }
        })
        .catch((error) => {
            console.error('Error details:', error);
            alert('Błąd połączenia z serwerem: ' + error.message);
        });
    }

    function toggleField(element, volunteerId, field, newValue) {
        console.log(`Toggling field ${field} for volunteer ID ${volunteerId} to value ${newValue}`);
        fetch(`/wolontariusze/toggle/${volunteerId}`, {
            method: 'PATCH',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ field, value: newValue })
        })
        .then(r => {
            if (!r.ok) {
                throw new Error(`HTTP error! status: ${r.status}`);
            }
            return r.json();
        })
        .then(data => {
            if (data.success) {
                console.log(`Successfully toggled ${field} for volunteer ID ${volunteerId} to value ${newValue}`);
                // Znajdź badge i zaktualizuj go
                const badge = element;
                if (newValue === 1) {
                    badge.classList.remove('badge-no');
                    badge.classList.add('badge-yes');
                    badge.textContent = 'TAK';
                    badge.setAttribute('onclick', `toggleField(this, ${volunteerId}, '${field}', 0)`);
                } else {
                    badge.classList.remove('badge-yes');
                    badge.classList.add('badge-no');
                    badge.textContent = 'NIE';
                    badge.setAttribute('onclick', `toggleField(this, ${volunteerId}, '${field}', 1)`);
                } 
            } else {
                alert('Błąd: ' + data.message);
            }
        })
        .catch((error) => {
            console.error('Error details:', error);
            alert('Błąd połączenia z serwerem: ' + error.message);
        });
    }
</script>

