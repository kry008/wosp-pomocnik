        function toggleField(volunteerId, field, newValue) {
            fetch(`/wolontariusze/toggle/${volunteerId}`, {
                method: 'PATCH',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    field: field,
                    value: newValue
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Odśwież stronę aby pokazać nową wartość
                    location.reload();
                } else {
                    alert('Błąd: ' + data.message);
                }
            })
            .catch(error => {
                alert('Wystąpił błąd podczas aktualizacji');
                console.error('Error:', error);
            });
        }
        
        let peselTimeout = null;
        function showPesel(element) {
            // Ukryj wszystkie inne wyświetlone PESELe
            document.querySelectorAll('.pesel-hidden.show-pesel').forEach(el => {
                if (el !== element) {
                    el.classList.remove('show-pesel');
                }
            });
            
            // Dla urządzeń mobilnych - pokaż PESEL przez 4 sekundy
            element.classList.add('show-pesel');
            
            // Wyczyść poprzedni timeout jeśli istnieje
            if (peselTimeout) {
                clearTimeout(peselTimeout);
            }
            
            // Ukryj PESEL po 4 sekundach
            peselTimeout = setTimeout(() => {
                element.classList.remove('show-pesel');
            }, 4000);
        }
    </script>
